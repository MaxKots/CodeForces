#include <iostream>

int main() {
    int n;
    std::cin >> n;

    // Суммы по x, y, z
    int sumX = 0, sumY = 0, sumZ = 0;

    for (int i = 0; i < n; ++i) {
        int x, y, z;
        std::cin >> x >> y >> z;
        sumX += x;
        sumY += y;
        sumZ += z;
    }

    // Проверить, равны ли суммы 0
    if (sumX == 0 && sumY == 0 && sumZ == 0) {
        std::cout << "YES" << std::endl;
    } else {
        std::cout << "NO" << std::endl;
    }

    return 0;
}
